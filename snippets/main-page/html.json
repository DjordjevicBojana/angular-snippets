{
  "mainPageComponentTemplate": {
    "key": "mainPageComponentTemplate",
    "prefix": "h-mainPageTemplate",
    "description": "Creates a Main Page component template.",
    "body": [
      "<div class=\"hui-page-layout hasToolbar\"",
      "     kendoTooltip",
      "     position=\"bottom\"",
      "     tooltipClass=\"theme-tooltip\"",
      "     filter=\"hpro-iconic\">",
      "    <header>",
      "        <nav class=\"hui-page-toolbar k-widget k-toolbar mb-4 border-0\">",
      "            <button kendoButton",
      "                    fillMode=\"flat\"",
      "                    [title]=\"'${1:CREATE_NEW_BTN_TEXT}' | translate\"",
      "                    (click)=\"${2:createNewFn}()\">",
      "                <hpro-iconic [icon]=\"icons.icomoonPlusCircle2\"></hpro-iconic>",
      "                <span class=\"ms-1\"",
      "                      translate=\"${1:CREATE_NEW_BTN_TEXT}\"></span>",
      "            </button>",
      "        </nav>",
      "        <nav class=\"hui-page-breadcrumb m-4 k-widget k-breadcrumb\"",
      "             aria-label=\"breadcrumb\">",
      "            <ol class=\"k-breadcrumb-container\">",
      "                <li class=\"breadcrumb-item\">",
      "                    <a [href]=\"homeUrl\"",
      "                       [translate]=\"'APP_NAME'\"></a>",
      "                </li>",
      "                <li class=\"breadcrumb-item\"",
      "                    [translate]=\"'${3:SECTION}'\"></li>",
      "                <li class=\"breadcrumb-item\"",
      "                    [translate]=\"'${4:SUB_SECTION}'\"></li>",
      "            </ol>",
      "        </nav>",
      "    </header>",
      "    <main class=\"hui-page-main mx-4\">",
      "        <h2 class=\"hui-page-title my-4\">",
      "            <span [translate]=\"'${3:SECTION}'\"></span>",
      "            <span> / </span>",
      "            <span [translate]=\"'${4:SUB_SECTION}'\"></span>",
      "            <hpro-iconic class=\"ms-2 theme-title-tooltip-icon\"",
      "                         [icon]=\"icons.icomoonInfo\"",
      "                         title=\"{{'${5:PAGE_MAIN_TOOlTIP_TEXT}' | translate}}\">",
      "            </hpro-iconic>",
      "        </h2>",
      "        <div class=\"row page-block\">",
      "            <div class=\"col-12\">",
      "               $BLOCK_COMMENT_START Usually data grid goes here. Snippet h-gridComponent can be used. $BLOCK_COMMENT_END",
      "               ${6:PAGE_CONTENT}",
      "            </div>",
      "        </div>",
      "    </main>",
      "</div>"
    ],
    "scope": "html"
  }
}
